<UserControl x:Class="BEditor.Views.SettingsControl.ProjectSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.SettingsControl"
             xmlns:properties="clr-namespace:BEditor.Properties"
             xmlns:resource="clr-namespace:BEditor.NET.Properties;assembly=BEditor.NET"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <VirtualizingStackPanel>
            <VirtualizingStackPanel Orientation="Horizontal" Height="45">
                <CheckBox Margin="25,0,25,0" IsChecked="{Binding AutoBackUp, Source={x:Static properties:Settings.Default}, Mode=TwoWay}" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Static resource:Resources.UseAutoBackup}" FontSize="13" VerticalAlignment="Center"/>
            </VirtualizingStackPanel>
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
