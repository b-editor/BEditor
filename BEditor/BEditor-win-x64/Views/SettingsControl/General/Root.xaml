<UserControl x:Class="BEditor.Views.SettingsControl.General.Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BEditor.Views.SettingsControl.General"
             xmlns:property="clr-namespace:BEditor.Properties"
             xmlns:resources="clr-namespace:BEditorCore.Properties;assembly=BEditorCore"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <VirtualizingStackPanel>
        
        <md:ColorZone Content="{x:Static resources:Resources.General}" Foreground="White" Background="{StaticResource PrimaryHueMidBrush}" Margin="10,10,10,10" Padding="9,9,9,9" md:ShadowAssist.ShadowDepth="Depth2"/>

        <VirtualizingStackPanel Orientation="Horizontal" Height="45">
            <CheckBox IsChecked="{Binding UseGDI, Source={x:Static property:Settings.Default}, Mode=TwoWay}" Padding="0" Grid.Column="1" Margin="25,0,25,0" VerticalAlignment="Center"/>
            <TextBlock Text="{x:Static resources:Resources.UseGDI}" FontSize="13" VerticalAlignment="Center"/>
        </VirtualizingStackPanel>
        
    </VirtualizingStackPanel>
</UserControl>
