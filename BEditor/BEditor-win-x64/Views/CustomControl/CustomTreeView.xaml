<UserControl x:Class="BEditor.Views.CustomControl.CustomTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.TimeLines"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <VirtualizingStackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            <Button
                Background="Transparent"
                Height="{Binding HeaderHeight, ElementName=root, Mode=OneWay}"
                BorderThickness="0,0,0,0"
                Click="Button_Click" Cursor="Arrow"/>

            <VirtualizingStackPanel x:Name="roothead" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ToggleButton
                    Foreground="{Binding HeaderColor, ElementName=root, Mode=OneWay}"
                    IsChecked="{Binding IsExpanded, ElementName=root, Mode=OneWay}"
                    Style="{StaticResource MaterialDesignExpandCollapseToggleStyle}"
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    Padding="0,0,0,0"
                    IsHitTestVisible="False"/>
                <Label
                    x:Name="header"
                    Foreground="{Binding HeaderColor, ElementName=root, Mode=OneWay}"
                    Content="{Binding Header, ElementName=root, Mode=OneWay}"
                    VerticalAlignment="Center"
                    FontWeight="Normal"
                    Padding="0,0,0,0"
                    VerticalContentAlignment="Center"/>
            </VirtualizingStackPanel>
        </Grid>
        <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="_content" Padding="0,0,0,0" RenderTransformOrigin="0.5,0.5" Height="0"/>
    </VirtualizingStackPanel>
</UserControl>
