<UserControl x:Class="BEditor.Views.ToolControl.Default.Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.ToolControl.Default"
             Background="{DynamicResource MaterialDesignPaper}"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:listsource="clr-namespace:BEditor.NET.Data.EffectData;assembly=BEditor.NET"
             xmlns:vm="clr-namespace:BEditor.ViewModels.ToolControl"
             mc:Ignorable="d"
             DataContext="{x:Static vm:LibraryViewModel.Current}">
    <ScrollViewer Margin="5,5,5,5">
        <TreeView x:Name="TreeView" ItemsSource="{x:Static listsource:EffectData.LoadedEffects}" md:RippleAssist.IsDisabled="True">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type listsource:EffectData}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}" Margin="3 2"/>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseDown">
                    <i:InvokeCommandAction Command="{Binding MouseDownCommand, Mode=OneTime}" CommandParameter="{Binding ElementName=TreeView, Path=SelectedItem}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewMouseMove">
                    <i:InvokeCommandAction Command="{Binding MouseMoveCommand, Mode=OneTime}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TreeView>
    </ScrollViewer>
</UserControl>
