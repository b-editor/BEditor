<UserControl x:Class="BEditor.Views.SettingsControl.AppInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.SettingsControl"
             xmlns:properties="clr-namespace:BEditor.Core.Properties;assembly=BEditor.Core"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <VirtualizingStackPanel>
            <md:ColorZone Content="{x:Static properties:Resources.Varsion}" Foreground="White" Background="{StaticResource PrimaryHueMidBrush}" Margin="10,10,10,10" Padding="9,9,9,9" md:ShadowAssist.ShadowDepth="Depth2"/>
            <Grid Margin="10,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <VirtualizingStackPanel Margin="10,0,10,0">
                    <Label Content="AppVersion : " Margin="6,6,6,6"/>
                    <Label Content="OpenCV : " Margin="6,6,6,6"/>
                    <Label Content="OpenGL : " Margin="6,6,6,6"/>
                </VirtualizingStackPanel>

                <VirtualizingStackPanel x:Name="version" Grid.Column="1" Margin="10,0,10,0">
                    <Label Content="{Binding AppVersion, Mode=OneTime}" Margin="6,6,6,6"/>
                    <Label Content="{Binding OpenCVVersion, Mode=OneTime}" Margin="6,6,6,6"/>
                    <Label Content="{Binding OpenGLVersion, Mode=OneTime}" Margin="6,6,6,6"/>
                </VirtualizingStackPanel>
            </Grid>
        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
