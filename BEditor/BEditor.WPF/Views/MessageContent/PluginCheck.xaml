<UserControl x:Class="BEditor.Views.MessageContent.PluginCheck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.MessageContent"
             mc:Ignorable="d">
    <VirtualizingStackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding IsEnabled.Value, Mode=TwoWay}" HorizontalAlignment="Left" Margin="15"/>
        <TextBlock Text="{Binding Name.Value}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,15,0"/>
    </VirtualizingStackPanel>
</UserControl>
