<MatDialog @bind-IsOpen="@IsOpened">
    <MatDialogTitle Style="color: #ffffff;">Open project</MatDialogTitle>
    <MatDialogContent>

    </MatDialogContent>
    <MatDialogActions>
        <MatButton OnClick="@(e => { IsOpened = false; OKClick.InvokeAsync(); })">OK</MatButton>
        <MatButton OnClick="@(e => IsOpened = false)">Cancel</MatButton>
    </MatDialogActions>
</MatDialog>

@code{
    [Parameter]
    public bool IsOpened { get; set; }
    [Parameter]
    public EventCallback OKClick { get; set; }
}