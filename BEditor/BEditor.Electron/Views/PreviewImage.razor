<img src="@Source" style="@Style" class="@Class"/>

@code{
    [Parameter]
    public string Source { get; set; }
    [Parameter]
    public string Style { get; set; }
    [Parameter]
    public string Class { get; set; }

    public void Update()
    {
        this.InvokeAsync(this.StateHasChanged);
    }
}