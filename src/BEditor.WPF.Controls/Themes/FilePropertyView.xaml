<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BEditor.WPF.Controls"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="FilePropertyStyle" TargetType="{x:Type local:FilePropertyView}">
        <Setter Property="Height" Value="42.5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FilePropertyView}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="120*"
                                MinWidth="50"
                                MaxWidth="100" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="{TemplateBinding Header}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{TemplateBinding ToolTip}" />
                        </Grid>

                        <!--  text box  -->
                        <TextBox
                            Grid.Column="3"
                            Margin="5,0,5,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            IsReadOnly="True"
                            Text="{TemplateBinding File}" />

                        <!--  button  -->
                        <Button
                            Grid.Column="2"
                            Width="32"
                            Margin="10,0,0,0"
                            Padding="0,0,0,0"
                            HorizontalAlignment="Left"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Command="{TemplateBinding OpenFileCommand}">
                            <md:PackIcon Foreground="{DynamicResource MaterialDesignBody}" Kind="File" />
                        </Button>

                        <md:PopupBox
                            Grid.Column="4"
                            Width="20"
                            Height="32.5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            StaysOpen="False">
                            <md:PopupBox.ToggleContent>
                                <md:PackIcon
                                    Width="16"
                                    Height="16"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    Kind="DotsVertical" />
                            </md:PopupBox.ToggleContent>
                            <VirtualizingStackPanel MinWidth="100">
                                <Button
                                    HorizontalContentAlignment="Left"
                                    Command="{TemplateBinding ResetCommand}"
                                    Content="Reset" />
                                <Button
                                    HorizontalContentAlignment="Left"
                                    Command="{TemplateBinding BindCommand}"
                                    Content="Bind" />
                                <ComboBox
                                    x:Name="combo"
                                    Margin="16,8"
                                    SelectedIndex="{TemplateBinding ModeIndex}">
                                    <ComboBoxItem Content="FullPath" />
                                    <ComboBoxItem Content="FromProject" />
                                </ComboBox>
                            </VirtualizingStackPanel>
                        </md:PopupBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>