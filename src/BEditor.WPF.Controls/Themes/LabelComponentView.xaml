<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BEditor.WPF.Controls">
    <Style x:Key="LabelComponentStyle" TargetType="{x:Type local:LabelComponentView}">
        <Setter Property="Height" Value="32.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LabelComponentView}">
                    <TextBlock Text="{TemplateBinding Text}" VerticalAlignment="Center" Margin="10,0,20,0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>