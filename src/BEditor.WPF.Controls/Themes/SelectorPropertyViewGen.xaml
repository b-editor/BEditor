<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BEditor.WPF.Controls"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="SelectorPropertyGenStyle" TargetType="{x:Type local:SelectorPropertyViewGen}">
        <Setter Property="Height" Value="32.5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SelectorPropertyViewGen}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="120*"
                                MinWidth="50"
                                MaxWidth="100" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="{TemplateBinding Header}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{TemplateBinding ToolTip}" />
                        </Grid>


                        <!--  Combo box  -->
                        <ComboBox
                            x:Name="box"
                            Grid.Column="3"
                            Margin="5,0,5,0"
                            ItemsSource="{TemplateBinding ItemsSource}"
                            SelectedIndex="" />

                        <md:PopupBox
                            Grid.Column="4"
                            Width="20"
                            Height="32.5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            StaysOpen="False">
                            <md:PopupBox.ToggleContent>
                                <md:PackIcon
                                    Width="16"
                                    Height="16"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Foreground="{DynamicResource MaterialDesignBody}"
                                    Kind="DotsVertical" />
                            </md:PopupBox.ToggleContent>
                            <VirtualizingStackPanel>
                                <Button Command="{TemplateBinding ResetCommand}" Content="Reset" />
                                <Button Command="{TemplateBinding BindCommand}" Content="Bind" />
                            </VirtualizingStackPanel>
                        </md:PopupBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>