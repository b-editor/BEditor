  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="using:BEditor.Views"
  xmlns:vm="using:BEditor.ViewModels.Properties"
  x:DataType="vm:EasePropertyViewModel"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Name="root"
  Height="32.5"
  Background="Transparent"
  x:Class="BEditor.Views.Properties.EasePropertyView">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120*" MinWidth="50" MaxWidth="100" />
      <ColumnDefinition Width="40" />
      <ColumnDefinition Width="40" />
      <ColumnDefinition Width="*" MinWidth="100" />
    </Grid.ColumnDefinitions>

    <Grid Margin="0,0,0,1">
      <TextBlock
          Margin="10,7,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          FontSize="13"
          Text="{CompiledBinding Metadata.Value.Name, Mode=OneTime}"
          TextTrimming="CharacterEllipsis" />
    </Grid>

    <Button Grid.Column="1" Width="32.5" Height="32.5" VerticalAlignment="Top" Click="ShowEasingProperty" Background="Transparent">
      <PathIcon Data="{DynamicResource \\data_line\\svg\\ic_fluent_data_line_24_regular.svg_regular}"/>
    </Button>
