    <ToggleButton
      x:Name="togglebutton"
      Grid.Column="2"
      Width="32.5"
      Height="32.5"
      VerticalAlignment="Top"
      Background="Transparent"
      Click="ListToggleClick">
      <PathIcon
        Width="20"
        Height="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Data="{DynamicResource \\chevron_up_down\\svg\\ic_fluent_chevron_up_down_20_regular.svg_regular}" />
