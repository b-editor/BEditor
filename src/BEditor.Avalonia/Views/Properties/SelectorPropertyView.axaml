<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:BEditor.ViewModels.Properties"
  x:DataType="vm:SelectorPropertyViewModel"
  Background="Transparent"
  Height="32.5"
  HorizontalAlignment="Stretch"
  mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="32.5"
  x:Class="BEditor.Views.Properties.SelectorPropertyView">
  <UserControl.ContextMenu>
    <ContextMenu>
      <MenuItem Header="Reset" Command="{CompiledBinding Reset, Mode=OneTime}"/>
      <MenuItem Header="Bind" Command="{CompiledBinding Bind, Mode=OneTime}"/>
    </ContextMenu>
  </UserControl.ContextMenu>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120*" MaxWidth="100" MinWidth="50"/>
      <ColumnDefinition Width="40"/>
      <ColumnDefinition Width="40"/>
      <ColumnDefinition Width="*" MinWidth="100"/>
    </Grid.ColumnDefinitions>

    <Grid Margin="0,0,0,1">
      <TextBlock
        Text="{CompiledBinding Metadata.Value.Name, Mode=OneTime}"
        VerticalAlignment="Center"
        HorizontalAlignment="Left"
        FontSize="13"
        Margin="10,0,0,0"
        TextTrimming="CharacterEllipsis" />
    </Grid>


    <!--Combo box-->
    <ComboBox
      Items="{CompiledBinding Metadata.Value.ItemSource, Mode=OneTime}"
      SelectedIndex="{CompiledBinding Property.Index, Mode=OneWay}"
      SelectionChanged="ComboBox_SelectionChanged"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center"
      Background="Transparent"
      BorderBrush="Transparent"
      Grid.Column="3"
      Margin="5,0,5,0"/>
  </Grid>
</UserControl>
