<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  xmlns:vm="using:BEditor.ViewModels.Properties"
  x:DataType="vm:FontPropertyViewModel"
  Height="32.5"
  Background="Transparent"
  x:Class="BEditor.Views.Properties.FontPropertyView">
  <UserControl.ContextMenu>
    <ContextMenu>
      <MenuItem Header="Reset" Command="{CompiledBinding Reset, Mode=OneTime}"/>
      <MenuItem Header="Bind" Command="{CompiledBinding Bind, Mode=OneTime}"/>
    </ContextMenu>
  </UserControl.ContextMenu>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition
          Width="120*"
          MinWidth="50"
          MaxWidth="100" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="*" MinWidth="100" />
    </Grid.ColumnDefinitions>

    <Grid>
      <TextBlock
        Margin="10,0,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        FontSize="13"
        Text="{CompiledBinding Metadata.Value.Name, Mode=OneTime}"
        TextTrimming="CharacterEllipsis" />
    </Grid>


    <!--  Combo box  -->
    <ComboBox
      x:Name="box"
      Grid.Column="3"
      Margin="5,0,5,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Center"
      Background="Transparent"
      BorderBrush="Transparent"
      SelectedItem="{CompiledBinding Property.Value.Name, Mode=OneWay}"
      Items="{Binding Fonts, Mode=OneTime}"/>
    
  </Grid>
</UserControl>
