<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\props\common.props" />
  <Import Project="..\..\props\analyzer.props" />

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <RootNamespace>BEditor</RootNamespace>
    <RuntimeIdentifiers>win-x64;linux-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.0" />
    <PackageReference Include="Avalonia.Diagnostics" Version="0.10.0" />
    <PackageReference Include="MessageBox.Avalonia" Version="1.1.1" />
    <PackageReference Include="NLog.Extensions.Logging" Version="1.7.2" />
    <PackageReference Include="ReactiveProperty" Version="7.8.3" />
   </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\BEditor.Core\BEditor.Core.csproj" />
    <ProjectReference Include="..\BEditor.Primitive\BEditor.Primitive.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
    <Compile Update="Views\Properties\DialogPropertyView.axaml.cs">
      <DependentUpon>DialogPropertyView.axaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Properties\FolderPropertyView.axaml.cs">
      <DependentUpon>FolderPropertyView.axaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Properties\TextPropertyView.axaml.cs">
      <DependentUpon>TextPropertyView.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Properties\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Assets\Images\" />
  </ItemGroup>

</Project>
