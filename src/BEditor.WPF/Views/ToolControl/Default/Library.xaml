<UserControl
    x:Class="BEditor.Views.ToolControl.Default.Library"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:listsource="clr-namespace:BEditor.Data;assembly=BEditor.Core"
    xmlns:local="clr-namespace:BEditor.Views.ToolControl.Default"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <ScrollViewer x:Name="scrollViewer" Margin="5,5,5,5">
        <TreeView
            x:Name="TreeView"
            md:RippleAssist.IsDisabled="True"
            ItemsSource="{x:Static listsource:EffectMetadata.LoadedEffects}"
            PreviewMouseDown="TreeView_PreviewMouseDown"
            PreviewMouseWheel="TreeView_PreviewMouseWheel">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type listsource:EffectMetadata}" ItemsSource="{Binding Children}">
                    <TextBlock Margin="3,2" Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </ScrollViewer>
</UserControl>
