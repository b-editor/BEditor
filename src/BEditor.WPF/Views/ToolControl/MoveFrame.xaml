<UserControl
    x:Class="BEditor.Views.ToolControl.MoveFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.ToolControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prop="clr-namespace:BEditor.Properties;assembly=BEditor.Core"
    x:Name="root"
    Width="240"
    Height="40"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="CustomFlatButton"
            BasedOn="{StaticResource MaterialDesignFlatButton}"
            TargetType="Button">
            <Setter Property="Cursor" Value="Arrow" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            <Setter Property="Padding" Value="8" />
        </Style>
    </UserControl.Resources>
    <md:Card>
        <DockPanel>
            <Button
                HorizontalAlignment="Right"
                Click="CloseClick"
                DockPanel.Dock="Right"
                IsCancel="True"
                Style="{StaticResource CustomFlatButton}">
                <md:PackIcon Kind="Close" />
            </Button>
            <Button
                HorizontalAlignment="Right"
                Click="MoveClick"
                DockPanel.Dock="Right"
                IsDefault="True"
                Style="{StaticResource CustomFlatButton}">
                <md:PackIcon Kind="ArrowRightBold" />
            </Button>


            <TextBox
                x:Name="Text_box"
                Margin="8,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                md:TextFieldAssist.HasClearButton="True"
                DockPanel.Dock="Left"
                KeyDown="Text_box_KeyDown"
                Text="{Binding ElementName=root, Path=Frame.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="{x:Static prop:Resources.Move_to_the_specified_frame}" />
        </DockPanel>
    </md:Card>
</UserControl>
