<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:BEditor.Views.SettingsControl">
    <Style x:Key="SettingsComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="0,10,25,10"/>
        <Setter Property="Width" Value="80"/>
    </Style>
    <Style x:Key="SettingsTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="0,10,25,10"/>
        <Setter Property="Width" Value="80"/>
    </Style>
    <Style x:Key="SettingsCheckBox" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="25,0,25,0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    <Style x:Key="SettingsCheckBoxContent" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    <Style x:Key="SettingsHeader" TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="25,0,25,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="SettingsColorZone" TargetType="md:ColorZone">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="9"/>
        <Setter Property="md:ShadowAssist.ShadowDepth" Value="Depth2"/>
    </Style>
</ResourceDictionary>