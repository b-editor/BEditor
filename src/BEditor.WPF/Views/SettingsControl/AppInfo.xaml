<UserControl
    x:Class="BEditor.Views.SettingsControl.AppInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.SettingsControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:properties="clr-namespace:BEditor.Properties"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <VirtualizingStackPanel>
            <md:ColorZone
                Margin="10,10,10,10"
                Padding="9,9,9,9"
                md:ShadowAssist.ShadowDepth="Depth2"
                Background="{StaticResource PrimaryHueMidBrush}"
                Content="{x:Static properties:Strings.Version}"
                Foreground="White" />

            <ListBox
                x:Name="version"
                Margin="10"
                ItemsSource="{Binding Versions, Mode=OneTime}" />
        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
