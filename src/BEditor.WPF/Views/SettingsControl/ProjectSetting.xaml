<UserControl
    x:Class="BEditor.Views.SettingsControl.ProjectSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:BEditor.ViewModels.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:BEditor;assembly=BEditor.Settings"
    xmlns:local="clr-namespace:BEditor.Views.SettingsControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:resource="clr-namespace:BEditor.Properties;assembly=BEditor.Core"
    xmlns:vm="clr-namespace:BEditor.ViewModels.SettingsControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <VirtualizingStackPanel>
            <VirtualizingStackPanel Height="45" Orientation="Horizontal">
                <CheckBox IsChecked="{Binding AutoBackUp, Source={x:Static data:Settings.Default}, Mode=TwoWay}" Style="{StaticResource SettingsCheckBox}" />
                <TextBlock Style="{StaticResource SettingsCheckBoxContent}" Text="{x:Static resource:Resources.UseAutoBackup}" />
            </VirtualizingStackPanel>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <VirtualizingStackPanel>
                    <Label Content="{x:Static resource:Resources.BackUpInterval}" Style="{StaticResource SettingsHeader}" />
                </VirtualizingStackPanel>
                <VirtualizingStackPanel Grid.Column="1">
                    <TextBox Style="{StaticResource SettingsTextBox}" Text="{Binding BackUpInterval, Mode=TwoWay, Source={x:Static data:Settings.Default}, UpdateSourceTrigger=LostFocus}" />
                </VirtualizingStackPanel>
            </Grid>
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
