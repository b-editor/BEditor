<UserControl
    x:Class="BEditor.Views.SettingsControl.General.IncludeFont"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.SettingsControl.General"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:properties="clr-namespace:BEditor.Properties"
    xmlns:setting="clr-namespace:BEditor;assembly=BEditor.Settings"
    xmlns:vm="clr-namespace:BEditor.ViewModels.SettingsControl.General"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:IncludeFontViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ItemsSource="{Binding IncludeFontDir, Source={x:Static setting:Settings.Default}}"
            SelectedItem="{Binding SelectFont.Value, Mode=TwoWay}" />

        <VirtualizingStackPanel
            Grid.Row="1"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding Add, Mode=OneTime}"
                Content="{x:Static properties:Strings.Add}"
                Foreground="{DynamicResource MaterialDesignBody}"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Margin="10"
                Command="{Binding Remove, Mode=OneTime}"
                Content="{x:Static properties:Strings.Remove}"
                Foreground="{DynamicResource MaterialDesignBody}"
                IsEnabled="{Binding IsSelected.Value, Mode=OneWay}"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
