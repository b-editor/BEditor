<UserControl
    x:Class="BEditor.Views.SettingsControl.Plugins.InstalledPlugins"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:BEditor.ViewModels.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.SettingsControl.Plugins"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:plugin="clr-namespace:BEditor.Plugin;assembly=BEditor.Core"
    xmlns:properties="clr-namespace:BEditor.Properties"
    xmlns:vm="clr-namespace:BEditor.ViewModels.SettingsControl.Plugins"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:InstalledPluginsViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <convert:PluginNameConverter x:Key="NameConvert" />
        <convert:PluginAuthorConverter x:Key="AuthorConvert" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ItemsSource="{Binding Plugins, Source={x:Static plugin:PluginManager.Default}}"
            SelectedItem="{Binding SelectPlugin.Value, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="60">
                        <VirtualizingStackPanel>
                            <Label Content="{Binding Converter={StaticResource NameConvert}}" FontSize="14" />
                            <Label Content="{Binding Description}" />
                        </VirtualizingStackPanel>
                        <Label HorizontalAlignment="Right" Content="{Binding Converter={StaticResource AuthorConvert}}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <VirtualizingStackPanel
            Grid.Row="1"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding SettingClick, Mode=OneTime}"
                Content="{x:Static properties:Strings.Settings}"
                Foreground="{DynamicResource MaterialDesignBody}"
                IsEnabled="{Binding IsSelected.Value, Mode=OneWay}"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Margin="10"
                Command="{Binding UnloadClick, Mode=OneTime}"
                Content="{x:Static properties:Strings.UnloadPlugin}"
                Foreground="{DynamicResource MaterialDesignBody}"
                IsEnabled="{Binding IsSelected.Value, Mode=OneWay}"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
