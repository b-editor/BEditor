<Metro:MetroWindow
    x:Class="BEditor.Views.PropertyControls.BindSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.PropertyControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:properties="clr-namespace:BEditor.Properties"
    MinWidth="500"
    MinHeight="300"
    d:DesignHeight="250"
    d:DesignWidth="300"
    Background="{StaticResource MaterialDesignPaper}"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Style="{StaticResource DefaultWindowStyle}"
    TextElement.Foreground="{StaticResource MaterialDesignBody}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VirtualizingStackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Click="CloseButton"
                Command="{Binding OKCommand, Mode=OneTime}"
                Content="{x:Static properties:Strings.OK}"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Click="CloseButton"
                Content="{x:Static properties:Strings.Cancel}"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                Margin="30,0,0,0"
                Click="CloseButton"
                Command="{Binding DisconnectCommand, Mode=OneTime}"
                Content="{x:Static properties:Strings.Disconnect}"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <VirtualizingStackPanel>
                <Label
                    Height="45"
                    Padding="10,0,0,0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Content="パス" />
            </VirtualizingStackPanel>

            <VirtualizingStackPanel Grid.Column="1">
                <Label
                    Height="45"
                    Padding="0,0,0,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Center">
                    <TextBox
                        Margin="10,0,10,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Text="{Binding BindPath.Value, Mode=TwoWay}" />
                </Label>
            </VirtualizingStackPanel>
        </Grid>
    </Grid>
</Metro:MetroWindow>
