<UserControl
    x:Class="BEditor.Views.PropertyControl.FontPropertyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.PropertyControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Height="32.5"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="120*"
                MinWidth="50"
                MaxWidth="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" MinWidth="100" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid>
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="13"
                Text="{Binding Metadata.Value.Name, Mode=OneTime}"
                TextTrimming="CharacterEllipsis" />
        </Grid>


        <!--  Combo box  -->
        <ComboBox
            x:Name="box"
            Grid.Column="3"
            Margin="5,0,5,0"
            DisplayMemberPath="Name"
            IsHitTestVisible="True"
            ItemsSource="{Binding Metadata.Value.ItemSource, Mode=OneTime}"
            PreviewMouseDown="Box_PreviewMouseDown"
            PreviewMouseUp="Box_PreviewMouseUp"
            SelectedValue="{Binding Property.Value, Mode=OneWay}" />

        <md:PopupBox
            Grid.Column="4"
            Width="20"
            Height="32.5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            StaysOpen="False">
            <md:PopupBox.ToggleContent>
                <md:PackIcon
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Kind="DotsVertical" />
            </md:PopupBox.ToggleContent>
            <VirtualizingStackPanel>
                <Button Command="{Binding Reset, Mode=OneTime}" Content="Reset" />
            </VirtualizingStackPanel>
        </md:PopupBox>
    </Grid>
</UserControl>
