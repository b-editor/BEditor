<local:DialogContent
    x:Class="BEditor.Views.MessageContent.Loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.MessageContent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="450"
    Height="100"
    mc:Ignorable="d">
    <!--  d:DesignHeight="450" d:DesignWidth="800"  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Margin="10" Content="{Binding Text.Value}" />

        <ProgressBar
            Grid.Row="1"
            Margin="15,0,15,0"
            IsIndeterminate="{Binding IsIndeterminate.Value}"
            Maximum="{Binding Maximum.Value}"
            Minimum="{Binding Minimum.Value}"
            Value="{Binding NowValue.Value}" />

        <VirtualizingStackPanel
            x:Name="stack"
            Grid.Row="2"
            Margin="5,5,5,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal" />
    </Grid>
</local:DialogContent>
