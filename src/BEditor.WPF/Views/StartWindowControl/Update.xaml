<UserControl x:Class="BEditor.Views.StartWindowControl.Update"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BEditor.Views.StartWindowControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <VirtualizingStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="https://raw.githubusercontent.com/b-editor/BEditor/main/docs/imgs/header.png" Width="500"/>

        <VirtualizingStackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8">
            <TextBlock x:Name="textBlock" Margin="8" FontSize="16" VerticalAlignment="Center"/>

            <Button Margin="8" FontWeight="Normal" HorizontalAlignment="Center" x:Name="button" VerticalAlignment="Center"/>
        </VirtualizingStackPanel>
    </VirtualizingStackPanel>
</UserControl>
