<UserControl
    x:Class="BEditor.Views.StartWindowControl.ProjectsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:BEditor.ViewModels.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.StartWindowControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:model="clr-namespace:BEditor.Models"
    xmlns:props="clr-namespace:BEditor.Properties"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Lime.Accent.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <convert:PathToImageSource x:Key="PathToImageSource" />
            <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="{StaticResource Accent200}" />
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <DockPanel VerticalAlignment="Top" DockPanel.Dock="Top">
            <TextBlock
                DockPanel.Dock="Left"
                FontSize="24"
                Text="{x:Static props:Strings.Project}" />

            <VirtualizingStackPanel
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FlowDirection="RightToLeft"
                Orientation="Horizontal">
                <Button
                    Margin="8,0"
                    Command="{Binding Create, Mode=OneTime}"
                    Content="{x:Static props:Strings.CreateNew}"
                    Cursor="Arrow"
                    FontWeight="Normal" />
                <Button
                    Margin="8,0"
                    BorderBrush="{StaticResource PrimaryHueMidBrush}"
                    BorderThickness="1"
                    Command="{Binding Add, Mode=OneTime}"
                    Content="{x:Static props:Strings.AddToList}"
                    Cursor="Arrow"
                    FontWeight="Normal"
                    Style="{StaticResource MaterialDesignFlatButton}" />

                <TextBox
                    Width="200"
                    Margin="8,0"
                    md:HintAssist.Hint="{x:Static props:Strings.Search}"
                    FlowDirection="LeftToRight"
                    Text="{Binding Search.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </VirtualizingStackPanel>
        </DockPanel>

        <Grid Margin="0,8,0,8" DockPanel.Dock="Bottom">
            <md:Card Visibility="{Binding CountIsZero.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                <VirtualizingStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Noto Sans JP"
                        FontSize="40"
                        FontWeight="Bold"
                        Text="¯\_(ツ)_/¯" />
                    <TextBlock
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{x:Static props:Strings.ThereIsNoProject}" />
                    <TextBlock
                        Margin="0,8"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Text="{x:Static props:Strings.ToCreateProjectClickNew}" />
                </VirtualizingStackPanel>
            </md:Card>

            <ScrollViewer Visibility="{Binding CountIsNotZero.Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding Projects, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Width="200"
                                Height="220"
                                Margin="8"
                                Padding="0"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderThickness="0"
                                Command="{Binding Command, Mode=OneTime}"
                                CommandParameter="{Binding Mode=OneTime}"
                                Cursor="Arrow"
                                FontWeight="Normal"
                                Visibility="{Binding Visibility.Value, Mode=OneWay}">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Command="{Binding Remove, Mode=OneTime}" CommandParameter="{Binding Mode=OneTime}">
                                            <MenuItem.Header>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="120" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <VirtualizingStackPanel Orientation="Horizontal">
                                                        <md:PackIcon Margin="5,0,5,0" Kind="Delete" />
                                                        <TextBlock Margin="20,0,5,0" Text="{x:Static props:Strings.Remove}" />
                                                    </VirtualizingStackPanel>
                                                    <TextBlock Grid.Column="1" Text="Delete" />
                                                </Grid>
                                            </MenuItem.Header>
                                        </MenuItem>
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <ProgressBar
                                        Background="{StaticResource SecondaryHueMidBrush}"
                                        BorderThickness="0"
                                        Foreground="{StaticResource SecondaryHueDarkBrush}"
                                        IsIndeterminate="{Binding IsLoading.Value, Mode=OneWay}" />

                                    <Label
                                        Grid.Row="1"
                                        Padding="0"
                                        Background="{DynamicResource MaterialDesignBodyLight}">
                                        <Image
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="{Binding ThumbnailPath, Converter={StaticResource PathToImageSource}}"
                                            Stretch="UniformToFill" />
                                    </Label>

                                    <VirtualizingStackPanel Grid.Row="2" Margin="8">
                                        <TextBlock
                                            FontSize="24"
                                            Foreground="{DynamicResource MaterialDesignBody}"
                                            Text="{Binding Name, Mode=OneTime}" />
                                        <TextBlock
                                            Margin="0,8"
                                            Foreground="{DynamicResource MaterialDesignBody}"
                                            Text="{Binding Path, Mode=OneTime}"
                                            ToolTip="{Binding Path, Mode=OneTime}" />
                                    </VirtualizingStackPanel>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
