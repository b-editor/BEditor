<UserControl
    x:Class="BEditor.Views.TimeLines.KeyFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views.TimeLines"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:properties="clr-namespace:BEditor.Properties"
    Height="{Binding TrackHeight, Mode=OneTime}"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <Grid
            x:Name="grid"
            Background="Transparent"
            MouseLeave="Grid_Mouse_Leave"
            PreviewMouseLeftButtonDown="Grid_Mouse_Down"
            PreviewMouseMove="Grid_Mouse_Move"
            PreviewMouseRightButtonDown="Grid_Mouse_Right_Down"
            PreviewMouseUp="Grid_Mouse_Up">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Height="30" Click="Add_Frame">
                        <MenuItem.Header>
                            <VirtualizingStackPanel Orientation="Horizontal">
                                <md:PackIcon Margin="5,0,5,0" Kind="VectorPolylinePlus" />
                                <TextBlock Margin="20,0,5,0" Text="{x:Static properties:Strings.AddKeyframe}" />
                            </VirtualizingStackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
        </Grid>
        <TextBlock
            x:Name="text"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="{x:Null}"
            Foreground="{DynamicResource MaterialDesignCardBackground}"
            Text="{Binding Metadata.Value.Name, Mode=OneTime}" />
    </Grid>
</UserControl>
