<UserControl
    x:Class="BEditor.Views.CreatePage.SceneCreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BEditor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:props="clr-namespace:BEditor.Properties"
    xmlns:vm="clr-namespace:BEditor.ViewModels.CreatePage"
    Width="1000"
    Height="600"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Noto Sans JP"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="HeaderLabel"
            BasedOn="{StaticResource MaterialDesignLabel}"
            TargetType="{x:Type Label}">
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="10,5,0,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="TextBoxStyle"
            BasedOn="{StaticResource MaterialDesignTextBox}"
            TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="10,5,0,5" />
            <Setter Property="Width" Value="130" />
            <Setter Property="Height" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:SceneCreatePageViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <VirtualizingStackPanel Margin="8">
            <TextBlock
                Margin="0,0,0,16"
                FontSize="24"
                Foreground="{DynamicResource MaterialDesignBodyLight}"
                Text="{x:Static props:Strings.AddScene}" />

            <!--  Width  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Width}" />

                <TextBox Text="{Binding Width.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>

            <!--  Height  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Height}" />

                <TextBox Text="{Binding Height.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>

            <!--  Name  -->
            <VirtualizingStackPanel Margin="8,24,8,8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Name}" />

                <TextBox Margin="0,8" Text="{Binding Name.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>
        </VirtualizingStackPanel>

        <Button
            Margin="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Command="{Binding ResetCommand, Mode=OneTime}"
            Content="Reset"
            Cursor="Arrow"
            Foreground="{StaticResource MaterialDesignBody}"
            Style="{StaticResource MaterialDesignFlatButton}" />

        <VirtualizingStackPanel
            Grid.Column="1"
            Margin="8,0,8,8"
            VerticalAlignment="Bottom"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Content="{x:Static props:Strings.Cancel}"
                Cursor="Arrow"
                Foreground="Red"
                IsCancel="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Command="{Binding CreateCommand, Mode=OneTime}"
                Content="{x:Static props:Strings.Create}"
                Cursor="Arrow"
                Foreground="{StaticResource MaterialDesignBody}"
                IsDefault="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
