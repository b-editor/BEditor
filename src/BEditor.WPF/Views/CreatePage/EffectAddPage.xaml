<UserControl
    x:Class="BEditor.Views.CreatePage.EffectAddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:BEditor.Data;assembly=BEditor.Core"
    xmlns:local="clr-namespace:BEditor.Views.CreatePage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:model="clr-namespace:BEditor.Models"
    xmlns:props="clr-namespace:BEditor.Properties"
    xmlns:vm="clr-namespace:BEditor.ViewModels.CreatePage"
    Width="1000"
    Height="600"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Noto Sans JP"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style
            x:Key="HeaderLabel"
            BasedOn="{StaticResource MaterialDesignLabel}"
            TargetType="{x:Type Label}">
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="10,5,0,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="TextBoxStyle"
            BasedOn="{StaticResource MaterialDesignTextBox}"
            TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="10,5,0,5" />
            <Setter Property="Width" Value="130" />
            <Setter Property="Height" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style
            x:Key="ComboBoxStyle"
            BasedOn="{StaticResource MaterialDesignComboBox}"
            TargetType="{x:Type ComboBox}">
            <Setter Property="Margin" Value="10,5,0,5" />
            <Setter Property="Width" Value="130" />
            <Setter Property="Height" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="16"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Clip}" />
                <ItemsControl
                    HorizontalAlignment="Center"
                    ItemsSource="{Binding ClipItems.Value, Mode=OneWay}"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Width="180"
                                Height="200"
                                Margin="8"
                                Padding="8"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                md:ShadowAssist.ShadowDepth="Depth0"
                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                BorderThickness="0"
                                Command="{Binding Command, Mode=OneTime}"
                                CommandParameter="{Binding}"
                                Cursor="Arrow"
                                Foreground="{DynamicResource MaterialDesignBody}">
                                <Grid>
                                    <CheckBox
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        IsChecked="{Binding IsSelected.Value, Mode=OneWay}" />

                                    <TextBlock Text="{Binding Clip.LabelText, Mode=OneTime}" />

                                    <VirtualizingStackPanel VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding Clip.Start.Value, Mode=OneTime, StringFormat=Start: {0}}" />
                                        <TextBlock Text="{Binding Clip.Length.Value, Mode=OneTime, StringFormat=Length: {0}}" />
                                        <TextBlock Text="{Binding Clip.Layer, Mode=OneTime, StringFormat=Layer: {0}}" />
                                    </VirtualizingStackPanel>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </VirtualizingStackPanel>
        </ScrollViewer>

        <VirtualizingStackPanel Grid.Column="1" Margin="8">
            <TextBlock
                Margin="0,0,0,16"
                FontSize="16"
                Foreground="{DynamicResource MaterialDesignBodyLight}"
                Text="{x:Static props:Strings.Settings}" />

            <!--  Scene  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Scene}" />

                <ComboBox
                    Margin="0,8"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Source={x:Static model:AppData.Current}, Path=Project.SceneList}"
                    SelectedItem="{Binding Scene.Value}" />
            </VirtualizingStackPanel>

            <!--  Effect  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Effect}" />

                <ComboBox
                    Margin="0,8"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding AllEffects, Mode=OneTime}"
                    SelectedItem="{Binding Effect.Value}" />
            </VirtualizingStackPanel>
        </VirtualizingStackPanel>

        <VirtualizingStackPanel
            Grid.Column="2"
            Margin="8,0,8,8"
            VerticalAlignment="Bottom"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Content="{x:Static props:Strings.Cancel}"
                Cursor="Arrow"
                Foreground="Red"
                IsCancel="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Command="{Binding AddCommand, Mode=OneTime}"
                Content="{x:Static props:Strings.Add}"
                Cursor="Arrow"
                Foreground="{StaticResource MaterialDesignBody}"
                IsDefault="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>
    </Grid>
</UserControl>