<UserControl
    x:Class="BEditor.Views.CreatePage.ClipCreatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:convert="clr-namespace:BEditor.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:BEditor.Data;assembly=BEditor.Core"
    xmlns:local="clr-namespace:BEditor.Views.CreatePage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:model="clr-namespace:BEditor.Models"
    xmlns:props="clr-namespace:BEditor.Properties"
    xmlns:vm="clr-namespace:BEditor.ViewModels.CreatePage"
    Width="1000"
    Height="600"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="Noto Sans JP"
    mc:Ignorable="d">
    <UserControl.Resources>
        <convert:ClipTypeIconConverter x:Key="ClipTypeIconConverter" />
        <convert:ClipTypeColorConverter x:Key="ClipTypeColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="16"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Type}" />
                <ItemsControl
                    HorizontalAlignment="Center"
                    ItemsSource="{Binding TypeItems, Mode=OneTime}"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Width="180"
                                Height="200"
                                Margin="8"
                                Padding="8"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                md:ShadowAssist.ShadowDepth="Depth0"
                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                BorderThickness="0"
                                Command="{Binding Command, Mode=OneTime}"
                                CommandParameter="{Binding}"
                                Cursor="Arrow"
                                Foreground="{DynamicResource MaterialDesignBody}">
                                <Grid>
                                    <CheckBox
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        IsChecked="{Binding IsSelected.Value, Mode=OneWay}"
                                        IsHitTestVisible="False"
                                        Style="{StaticResource MaterialDesignAccentCheckBox}" />
                                    <VirtualizingStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <md:PackIcon
                                            Width="64"
                                            Height="64"
                                            HorizontalAlignment="Center"
                                            Foreground="{Binding Metadata.Type, Converter={StaticResource ClipTypeColorConverter}, Mode=OneTime}"
                                            Kind="{Binding Metadata.Type, Converter={StaticResource ClipTypeIconConverter}, Mode=OneTime}" />

                                        <TextBlock
                                            Margin="8"
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            Text="{Binding Metadata.Name, Mode=OneTime}" />
                                    </VirtualizingStackPanel>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </VirtualizingStackPanel>
        </ScrollViewer>

        <VirtualizingStackPanel Grid.Column="1" Margin="8">
            <TextBlock
                Margin="0,0,0,16"
                FontSize="16"
                Foreground="{DynamicResource MaterialDesignBodyLight}"
                Text="{x:Static props:Strings.Settings}" />

            <!--  Scene  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Scene}" />

                <ComboBox
                    Margin="0,8"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Source={x:Static model:AppData.Current}, Path=Project.SceneList}"
                    SelectedItem="{Binding Scene.Value}" />
            </VirtualizingStackPanel>

            <!--  Start  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Start}" />

                <TextBox Margin="0,8" Text="{Binding Start.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>

            <!--  Length  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Length}" />

                <TextBox Margin="0,8" Text="{Binding Length.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>

            <!--  Layer  -->
            <VirtualizingStackPanel Margin="8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Layer}" />

                <TextBox Margin="0,8" Text="{Binding Layer.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>


            <!--  Name  -->
            <VirtualizingStackPanel Margin="8,24,8,8">
                <TextBlock
                    FontSize="14"
                    Foreground="{DynamicResource MaterialDesignBodyLight}"
                    Text="{x:Static props:Strings.Name}" />

                <TextBox Margin="0,8" Text="{Binding Name.Value, Mode=TwoWay}" />
            </VirtualizingStackPanel>
        </VirtualizingStackPanel>

        <VirtualizingStackPanel
            Grid.Column="2"
            Margin="8,0,8,8"
            VerticalAlignment="Bottom"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Content="{x:Static props:Strings.Cancel}"
                Cursor="Arrow"
                Foreground="Red"
                IsCancel="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
            <Button
                HorizontalAlignment="Left"
                Click="CloseClick"
                Command="{Binding AddCommand, Mode=OneTime}"
                Content="{x:Static props:Strings.Create}"
                Cursor="Arrow"
                Foreground="{StaticResource MaterialDesignBody}"
                IsDefault="True"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </VirtualizingStackPanel>
    </Grid>
</UserControl>
