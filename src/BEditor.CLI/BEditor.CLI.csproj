<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <PackageId>BEditor.CLI</PackageId>
    <AssemblyName>bedit</AssemblyName>
    <RootNamespace>BEditor</RootNamespace>
  </PropertyGroup>

  <Import Project="..\..\props\common.props" />

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="3.9.0" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BEditor.Core\BEditor.Core.csproj" />
    <ProjectReference Include="..\BEditor.Primitive\BEditor.Primitive.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\CommandLineResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CommandLineResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\CommandLineResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>CommandLineResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
</Project>
